package require tcltest
namespace import ::tcltest::test ::tcltest::cleanupTests ::tcltest::testConstraint

# Load all .tcl files
set files [lsort [glob -nocomplain [file join [file dirname [file normalize [info script]]] "../tcl" *.tcl]]]
foreach file $files {
    source $file
}
namespace import ::qc::*

test response_data2json-1.0 {response data and response2json} -body {
    qc::response status valid
    qc::response data {object
        firstname Robert
        surname {string "O'Neil"}
        age 22
        height {number 180}
        employed {boolean true}
        commision false
        emails {array
            {string "boboneil@test.com"}
            {object
                address {string "robertneil@test.com"}
                description business
            }
        }
    }
    qc::response2json
} -cleanup {
    unset ::data
} -result {{
"status": "valid",
"record": {

},
"message": {

},
"action": {

},
"data": {
"firstname": "Robert",
"surname": "O'Neil",
"age": 22,
"height": 180,
"employed": true,
"commision": false,
"emails": ["boboneil@test.com",{
"address": "robertneil@test.com",
"description": "business"
}]
}
}}

