    test plural-2.3 {plural plateau} -setup {
    } -body {
        plural plateau
    } -cleanup {
    } -result {plateaux}

    test plural-2.4 {plural thesis} -constraints knownBug -setup {
    } -body {
        plural thesis
    } -cleanup {
