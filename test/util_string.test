package require tcltest
namespace import ::tcltest::test ::tcltest::cleanupTests ::tcltest::testConstraint

# Load all .tcl files
set files [lsort [glob -nocomplain [file join [file dirname [file normalize [info script]]] "../tcl" *.tcl]]]
foreach file $files {
    source $file
}
namespace import ::qc::*

# trunc
test trunc-1.0 {trunc } -setup {
} -body {
    trunc "01234567890" 5
} -cleanup {
} -result {01234}

test trunc-1.1 {trunc to empty} -setup {
} -body {
    trunc "01234567890" 0
} -cleanup {
} -result {}

test trunc-1.2 {trunc nothing to do} -setup {
} -body {
    trunc "01234567890" 20
} -cleanup {
} -result {01234567890}
