package require tcltest
namespace import ::tcltest::test ::tcltest::cleanupTests ::tcltest::testConstraint

# Load all .tcl files
set files [lsort [glob -nocomplain "~/qcode-tcl/tcl/*.tcl"]]
foreach file $files {
    source $file
}
namespace import ::qc::*

test file_temp-1.0 {file_temp exists} -setup {
    set file [qc::file_temp "Test"]
} -body {
    file exists $file
} -cleanup {
    file delete $file
} -result 1

test file_temp-1.1 {file_temp contains string} -setup {
    set file [qc::file_temp "Test contents"]
    set fh [open $file r]
} -body {
    gets $fh
} -cleanup {
    close $fh
    file delete $file
} -result "Test contents"

cleanupTests
